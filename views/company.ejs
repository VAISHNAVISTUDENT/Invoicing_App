<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    background-color: #f5f6fa;
    font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .page-title {
    font-weight: 600;
    font-size: 1.5rem;
  }

  .section-title {
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 0.75rem;
  }

  .card {
    border: none;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.04);
  }

  .form-control,
  .form-select {
    border-radius: 8px;
    padding: 0.6rem 0.75rem;
  }

  .btn-primary {
    background-color: #714b67; /* Odoo purple */
    border: none;
    border-radius: 8px;
    padding: 0.6rem 1.4rem;
  }

  .btn-primary:hover {
    background-color: #5c3c53;
  }

  .muted-text {
    font-size: 0.9rem;
    color: #6c757d;
  }
</style>
<div class="container py-5" style="max-width: 900px;">
  
  <!-- Header -->
  <div class="mb-4">
    <h1 class="page-title">Company Setup</h1>
    <p class="muted-text">
      Configure your company information to start accounting and invoicing.
    </p>
  </div>

  <form action="/company/setup" method="POST">

    <!-- Company Details -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="section-title">Company Information</div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Company Name</label>
            <input type="text" name="name" class="form-control" required>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Trade Name</label>
            <input type="text" name="tradeName" class="form-control">
          </div>

          <div class="col-md-6">
            <label class="form-label">Business Type</label>
            <select name="businessType" class="form-select" required>
              <option value="">Select type</option>
              <option>Proprietorship</option>
              <option>Partnership</option>
              <option>LLP</option>
              <option>Private Limited</option>
              <option>Other</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Address -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="section-title">Address</div>

        <div class="mb-3">
          <label class="form-label">Address Line</label>
          <input type="text" name="address[line1]" class="form-control" required>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label class="form-label">City</label>
            <input type="text" name="address[city]" class="form-control" required>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">State</label>
            <input type="text" name="address[state]" class="form-control" required>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Pincode</label>
            <input type="text" name="address[pincode]" class="form-control" pattern="[0-9]{6}" required>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="section-title">Contact Details</div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="contact[email]" class="form-control" required>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Phone</label>
            <input type="tel" name="contact[phone]" class="form-control" pattern="[0-9]{10}" required>
          </div>

          <div class="col-md-6">
            <label class="form-label">Website</label>
            <input type="url" name="contact[website]" class="form-control">
          </div>
        </div>
      </div>
    </div>

    <!-- Invoice Settings -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="section-title">Invoice Configuration</div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Invoice Prefix</label>
            <input type="text" name="invoiceConfig[prefix]" class="form-control" value="INV">
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Starting Number</label>
            <input type="number" name="invoiceConfig[nextNumber]" class="form-control" value="1">
          </div>
        </div>
      </div>
    </div>

    <!-- Submit -->
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-primary">
        Create Company
      </button>
    </div>

  </form>
</div>
