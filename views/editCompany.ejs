<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    background-color: #f5f6fa;
    font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .page-title {
    font-weight: 600;
    font-size: 1.5rem;
  }

  .section-title {
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 0.75rem;
  }

  .card {
    border: none;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.04);
  }

  .form-control,
  .form-select {
    border-radius: 8px;
    padding: 0.6rem 0.75rem;
  }

  .btn-primary {
    background-color: #714b67;
    border: none;
    border-radius: 8px;
    padding: 0.6rem 1.4rem;
  }

  .btn-primary:hover {
    background-color: #5c3c53;
  }

  .btn-danger {
    border-radius: 8px;
    padding: 0.6rem 1.4rem;
  }

  .muted-text {
    font-size: 0.9rem;
    color: #6c757d;
  }
</style>

<div class="container py-5" style="max-width: 900px;">
  
  <!-- Header -->
  <div class="mb-4">
    <h1 class="page-title">Edit Company</h1>
    <p class="muted-text">
      Update your company information.
    </p>
  </div>

  <form action="/company/<%= company._id %>/edit" method="POST">

    <!-- Company Details -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="section-title">Company Information</div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Company Name</label>
            <input type="text" name="name" class="form-control" value="<%= company.name %>" required>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Trade Name</label>
            <input type="text" name="tradeName" class="form-control" value="<%= company.tradeName || '' %>">
          </div>

          <div class="col-md-6">
            <label class="form-label">Business Type</label>
            <select name="businessType" class="form-select" required>
              <option value="">Select type</option>
              <option <%= company.businessType === 'Proprietorship' ? 'selected' : '' %>>Proprietorship</option>
              <option <%= company.businessType === 'Partnership' ? 'selected' : '' %>>Partnership</option>
              <option <%= company.businessType === 'LLP' ? 'selected' : '' %>>LLP</option>
              <option <%= company.businessType === 'Private Limited' ? 'selected' : '' %>>Private Limited</option>
              <option <%= company.businessType === 'Other' ? 'selected' : '' %>>Other</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Address -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="section-title">Address</div>

        <div class="mb-3">
          <label class="form-label">Address Line</label>
          <input type="text" name="address[line1]" class="form-control" value="<%= company.address?.line1 || '' %>" required>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label class="form-label">City</label>
            <input type="text" name="address[city]" class="form-control" value="<%= company.address?.city || '' %>" required>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">State</label>
            <input type="text" name="address[state]" class="form-control" value="<%= company.address?.state || '' %>" required>
          </div>

          <div class="col-md-4 mb-3">
            <label class="form-label">Pincode</label>
            <input type="text" name="address[pincode]" class="form-control" value="<%= company.address?.pincode || '' %>" pattern="[0-9]{6}" required>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="section-title">Contact Details</div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="contact[email]" class="form-control" value="<%= company.contact?.email || '' %>" required>
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Phone</label>
            <input type="tel" name="contact[phone]" class="form-control" value="<%= company.contact?.phone || '' %>" pattern="[0-9]{10}" required>
          </div>

          <div class="col-md-6">
            <label class="form-label">Website</label>
            <input type="url" name="contact[website]" class="form-control" value="<%= company.contact?.website || '' %>">
          </div>
        </div>
      </div>
    </div>

    <!-- Invoice Settings -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="section-title">Invoice Configuration</div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Invoice Prefix</label>
            <input type="text" name="invoiceConfig[prefix]" class="form-control" value="<%= company.invoiceConfig?.prefix || 'INV' %>">
          </div>

          <div class="col-md-6 mb-3">
            <label class="form-label">Next Number</label>
            <input type="number" name="invoiceConfig[nextNumber]" class="form-control" value="<%= company.invoiceConfig?.nextNumber || 1 %>">
          </div>
        </div>
      </div>
    </div>

    <!-- Submit & Delete -->
    <div class="d-flex justify-content-between">
      <button type="button" class="btn btn-danger" onclick="if(confirm('Are you sure you want to delete this company? This action cannot be undone.')) { document.getElementById('deleteForm').submit(); }">
        Delete Company
      </button>
      
      <button type="submit" class="btn btn-primary">
        Update Company
      </button>
    </div>

  </form>

  <!-- Hidden delete form -->
  <form id="deleteForm" action="/company/<%= company._id %>/delete" method="POST" style="display: none;">
  </form>

</div>