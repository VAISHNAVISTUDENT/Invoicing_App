<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Accounting Dashboard</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      background-color: #f5f6f8;
      font-size: 14px;
    }
    .sidebar {
      width: 230px;
      background-color: #1f2933;
      min-height: 100vh;
    }
    .sidebar a {
      color: #cfd8dc;
      text-decoration: none;
      padding: 10px 16px;
      display: block;
    }
    .sidebar a:hover {
      background-color: #374151;
      color: #fff;
    }
    .sidebar .active {
      background-color: #111827;
      color: #fff;
    }
    .topbar {
      background: #fff;
      border-bottom: 1px solid #e5e7eb;
    }
    .kpi-card {
      background: #fff;
      border: 1px solid #e5e7eb;
      border-radius: 6px;
    }
    .kpi-title {
      color: #6b7280;
      font-size: 13px;
    }
    .kpi-value {
      font-size: 20px;
      font-weight: 600;
    }
  </style>
</head>

<body>

<div class="d-flex">

  <!-- SIDEBAR -->
  <div class="sidebar">
    <div class="p-3 text-white fw-semibold border-bottom">
      Accounting
    </div>

    <a class="active" href="/dashboard/<%= company._id %>">Dashboard</a>
    <a href="/dashboard/<%= company._id %>/invoices">Invoices</a>
    <a href="/dashboard/<%= company._id %>/products">Products</a>
    <a href="/dashboard/<%= company._id %>/customers">Customers</a>
    <a href="/dashboard/<%= company._id %>/reports">Reports</a>
    <a href="/dashboard/<%= company._id %>/settings">Configuration</a>
  </div>

  <!-- MAIN CONTENT -->
  <div class="flex-grow-1">

    <!-- TOP BAR -->
    <div class="topbar px-4 py-3 d-flex justify-content-between align-items-center">
      <div>
        <h6 class="mb-0"><%= company.tradeName || company.name %></h6>
        <small class="text-muted">Accounting Dashboard</small>
      </div>

      <div class="d-flex gap-2">
        <a href="/dashboard/<%= company._id %>/invoices/new" class="btn btn-sm btn-primary">
          Create Invoice
        </a>
        <a href="/dashboard/<%= company._id %>/products/new" class="btn btn-sm btn-outline-secondary">
          Add Product
        </a>
      </div>
    </div>

    <!-- CONTENT -->
    <div class="p-4">

      <!-- KPI ROW -->
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="kpi-card p-3">
            <div class="kpi-title">Total Invoices</div>
            <div class="kpi-value">0</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="kpi-card p-3">
            <div class="kpi-title">Outstanding Amount</div>
            <div class="kpi-value">₹0</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="kpi-card p-3">
            <div class="kpi-title">Paid This Month</div>
            <div class="kpi-value">₹0</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="kpi-card p-3">
            <div class="kpi-title">Customers</div>
            <div class="kpi-value">0</div>
          </div>
        </div>
      </div>

      <!-- MAIN GRID -->
      <div class="row g-4">

        <!-- INVOICE STATUS -->
        <div class="col-md-8">
          <div class="bg-white border rounded p-3 h-100">
            <h6 class="fw-semibold mb-3">Invoices</h6>

            <table class="table table-sm">
              <thead class="table-light">
                <tr>
                  <th>Invoice</th>
                  <th>Status</th>
                  <th>Amount</th>
                  <th>Due</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td colspan="4" class="text-muted text-center">
                    No invoices created yet
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- QUICK ACTIONS -->
        <div class="col-md-4">
          <div class="bg-white border rounded p-3">
            <h6 class="fw-semibold mb-3">Quick Actions</h6>

            <div class="d-grid gap-2">
              <a href="/dashboard/<%= company._id %>/invoices/new" class="btn btn-outline-primary btn-sm">
                Create Invoice
              </a>

              <a href="/dashboard/<%= company._id %>/invoices" class="btn btn-outline-secondary btn-sm">
                Check Invoice Status
              </a>

              <a href="/dashboard/<%= company._id %>/products/new" class="btn btn-outline-secondary btn-sm">
                Add Product
              </a>

              <a href="/dashboard/<%= company._id %>/settings/bank" class="btn btn-outline-secondary btn-sm">
                Update Bank Details
              </a>

              <a href="/dashboard/<%= company._id %>/settings" class="btn btn-outline-secondary btn-sm">
                Company Settings
              </a>
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
